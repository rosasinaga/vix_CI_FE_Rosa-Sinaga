task 5

//'main' method must be in a class 'Rextester'.
//openjdk version '11.0.5' 

import java.util.*;
import java.lang.*;

class Rextester
{  
    static boolean Palindrome(String kata){
        int left=0;
        int right=kata.length()-1;
        //loop
        while(left<right){
            if(kata.charAt(left) != kata.charAt(right)){
                return false;
            }
            left++;
            right--;
        }
        return true;
        
    }
    public static void main(String args[])
    {
        //checker input ouput
        Scanner input = new Scanner(System.in);
        String kata = "mister";
        if(Palindrome(kata)){
            System.out.print("Palindrome");
        }else{
            System.out.print("Bukan Palindrome");
        }
    }
}

